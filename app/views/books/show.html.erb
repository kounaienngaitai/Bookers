<%= stylesheet_link_tag "books", :media => "all" %>

<div class="main">
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="sub-show">
<strong>Title:</strong><%= @book.title %>
</div>
<div class="sub-show">
  <strong>Body:</strong><%= @book.body %>
</div>

<%= link_to "Edit", edit_book_path(@book.id) %> | <%= link_to "Back", books_path %>

</div>