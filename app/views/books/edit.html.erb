
<h2>Editing</h2>

<%= form_with model: @book,  method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>


  <br>
  <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
  </br>

<% end %>
