<h2>投稿一覧</h2>

<table>
  <tr>
    <thead>
      <th>本のタイトル</th>
      <th>感想</th>
    </thead>
  </tr>

  <% @books.each do |book| %>

    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to '詳細', book_path(book.id) %></td>
        <td><%= link_to "編集", edit_book_path(book.id) %></td>
        <td><%= link_to "削除", destroy_book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
    </tbody>

  <% end %>
</table>